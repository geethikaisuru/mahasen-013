rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Personal context documents - users can only access their own data
    match /personal_contexts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Contact relationships - users can only access their own contact data
    match /contact_relationships/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Communication patterns - users can only access their own patterns
    match /communication_patterns/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Learning progress tracking - users can only access their own progress
    match /learning_progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 